{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "[%(levelname)s | %(asctime)s]: (%(funcName)s, %(lineno)s) %(message)s"
        },
        "detailed": {
            "format": "[%(levelname)s|%(module)s|L%(lineno)d] %(asctime)s: %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%S%z"
        },
        "json": {
            "()": "mylogging.custom_loggers.JSONFormatter",
            "fmt_keys": {
                "level": "levelname",
                "message": "message",
                "timestamp": "timestamp",
                "module": "module",
                "function": "funcName",
                "logger": "name",
                "line": "lineno"
            }
        }
    },
    "filters": {
        "no_errors": {
            "()": "mylogging.custom_loggers.NonErrorFilter"
        }
    },
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "simple",
            "stream": "ext://sys.stderr"
        },
        "basic_file": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "detailed",
            "filename": "app.log",
            "mode": "a",
            "delay": true
        },
        "json_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "json",
            "filename": "app.log.jsonl",
            "maxBytes": 10000000,
            "backupCount": 3,
            "mode": "a",
            "delay": true
        },
        "json_warnings": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "WARNING",
            "formatter": "json",
            "filename": "app.log.warnings.jsonl",
            "maxBytes": 10000000,
            "backupCount": 3,
            "mode": "a",
            "delay": true
        }
    },
    "loggers": {
        "root": {
            "level": "INFO",
            "handlers": [
                "json_file",
                "json_warnings",
                "stdout"
            ]
        }
    }
}